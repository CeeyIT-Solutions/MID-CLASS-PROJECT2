pipeline {
    agent any

    stages {
        stage('Initialize') {
            steps {
                echo 'Initializing.....'
		sh '/usr/share/maven/bin/mvn initialize'
            }
        }
	stage('Buiding') {
            steps {
                echo 'Building.....'
		sh '/usr/share/maven/bin/mvn clean package'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing.....'
		sh '/usr/share/maven/bin/mvn test'
            }
        }
        stage('Delopy') {
            steps {
                echo 'Deploying....'
		sshagent(['Deploy_user']) {
		sh "scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/jenkins-pipe/target/webapp-0.2.war centos@52.90.157.204:/home/ubuntu/apache-tomcat-10.0.21/webapps"
		 }
            }
        }
    }
}
